---
import { Icon } from "astro-icon/components";
import ContentSection from "@/components/content-section.astro";
import type { FeatureItem } from "@/types";


type Props = {
  eyebrowIcon?: string;
  title: string;
  content?: string;
  features: FeatureItem[];
};

const { eyebrowIcon, title, content, features } = Astro.props;
---

<ContentSection title={title} id="features">
  <Icon slot="eyebrow" name={eyebrowIcon || "mdi:star"} class="size-32" />

  {
    content && (
      <Fragment slot="lead">
        <h2 class="mx-auto max-w-[80vw] text-balance text-center text-xl md:max-w-[40vw]">
          {content}
        </h2>
      </Fragment>
    )
  }

  <ul class="grid max-w-6xl grid-cols-1 md:grid-cols-2">
    {
      features.map(({ title, description, icon }) => (
        <li class="border-default bg-offset flex h-72 flex-col items-center justify-center gap-4 border p-6">
          <div class="size-16 rounded-full border-2 border-current p-3">
            <Icon name={icon} class="size-full" />
          </div>
          <p class="text-center text-xl font-extrabold">{title}</p>
          <p class="text-offset text-balance text-center">{description}</p>
        </li>
      ))
    }
  </ul>
</ContentSection>
