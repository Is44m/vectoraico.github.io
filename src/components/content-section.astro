---
export interface Props {
  id: string;
  title: string;
}

const { title, id } = Astro.props;
---

<section id={id} class="flex scroll-mt-24 flex-col items-center gap-4">
  <div class="flex max-w-3xl flex-col items-center gap-4 text-balance">
    <slot name="eyebrow" />

    <h2 class="text-center text-6xl font-extrabold tracking-tight">
      {title}
    </h2>
  </div>

  <p class="max-w-xl text-center text-2xl font-extrabold">
    <slot name="lead" />
  </p>
  <slot />
</section>
