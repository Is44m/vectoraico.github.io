---
import { Button } from "@/components/ui/button";

type Props = {
  name: string;
  designation: string;
  bio: string;
  image: {
    src: string;
    width: number;
    height: number;
  };
  socials: {
    name: string;
    url: string;
  }[];
};

const { name, designation, bio, image, socials } = Astro.props;
---

<div>
  <div
    class="mx-4 flex items-center rounded-2xl bg-gray-50 shadow transition hover:shadow-xl dark:border-gray-700 dark:bg-gray-800"
  >
    <div>
      <img
        class="rounded-lg object-contain"
        src={image.src}
        alt={name}
        width={300}
        height={300}
      />
    </div>

    <div class="w-[70%] p-5">
      <h3
        class="text-xl font-bold tracking-tight text-gray-900 dark:text-white"
      >
        <p>
          {name}
        </p>
      </h3>

      <span class="text-gray-500 dark:text-gray-400">
        {designation}
      </span>

      <p class="mb-4 mt-3 font-light text-gray-500 dark:text-gray-400">
        {bio}
      </p>

      {
        socials && (
          <div class="mt-4 flex flex-wrap space-x-4">
            {socials.map((social) => (
              <a href={social.url} class="text-sm hover:underline">
                {social.name.charAt(0).toUpperCase() + social.name.slice(1)}
              </a>
            ))}
          </div>
        )
      }
    </div>
  </div>
</div>
