---
import type { FooterLink } from "@/types";
import { Icon } from "astro-icon/components";
import CustomLink from "./CustomLink.astro";

const links: Array<FooterLink> = [
  {
    url: "/vector-ai/",
    description: "Vectors's official website",
    icon: "mdi:home",
  },
  {
    url: "https://www.linkedin.com/company/vectoraico/",
    description: "Vector on LinkedIn",
    icon: "fa-brands:linkedin",
  },
  {
    url: "https://www.instagram.com/vectoraico/",
    description: "Vector on Instagram",
    icon: "fa-brands:instagram",
  },
  {
    url: "mailto:hello@vector-ai.co",
    description: "Vector's email address",
    icon: "mdi:email",
  },
];
---

<footer class="relative z-20 bg-white">
  <div class="mx-auto w-full max-w-screen-xl p-4 md:py-8">
    <div class="sm:flex sm:items-center sm:justify-between">
      <a
        href="/vector-ai/"
        class="mb-4 flex items-center space-x-3 invert sm:mb-0"
      >
        <img src="/vector-ai/vector.png" class="h-8" alt="Vector Logo" />
      </a>

      <ul
        class="mb-6 flex flex-wrap items-center gap-4 text-sm font-medium text-gray-500 dark:text-gray-400 sm:mb-0"
      >
        {
          links.map((link) => (
            <li>
              <CustomLink
                class="me-4 transition-all hover:text-black hover:underline md:me-6"
                href={link.url}
                rel="noreferrer"
                target="_blank"
              >
                <span class="sr-only">{link.description}</span>
                <Icon class="size-full" name={link.icon} />
              </CustomLink>
            </li>
          ))
        }
      </ul>
    </div>

    <hr class="my-6 border-gray-200 dark:border-gray-700 sm:mx-auto lg:my-8" />

    <div class="flex justify-between max-sm:flex-wrap">
      <span
        class="block text-sm text-gray-500 dark:text-gray-400 sm:text-center"
        >Â© {new Date().getFullYear()}
        <a href="/vector-ai/" class="hover:underline">VECTOR</a>. All Rights
        Reserved.
      </span>

      <a
        href="https://promirage.com/"
        target="_blank"
        rel="noreferrer"
        class="text-sm text-gray-500 hover:text-[#FFA939] hover:underline sm:text-center"
      >
        Powered by Mirage
      </a>
    </div>
  </div>
</footer>
